{
  "name": "mcp-server-template",
  "version": "1.0.0",
  "description": "Self-hosted MCP Server Template - Deploy your own Model Context Protocol server with tools, skills, and AI dev integrations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:streamable": "tsx watch src/mcp-streamable.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:streamable": "node dist/mcp-streamable.js",
    "cli": "tsx src/cli.ts",
    "lint": "eslint src/",
    "test": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "yaml": "^2.3.4",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "eventsource": "^2.0.2",
    "node-fetch": "^3.3.2",
    "chokidar": "^3.5.3",
    "winston": "^3.11.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/eventsource": "^1.1.15",
    "@types/crypto-js": "^4.2.1",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
